<div class="slider">
            <div class="slides">
                <input type="radio" name="radio_btn" id="radio1" >
                <input type="radio" name="radio_btn" id="radio2" >
                <input type="radio" name="radio_btn" id="radio3" >
                <input type="radio" name="radio_btn" id="radio4" >
                <input type="radio" name="radio_btn" id="radio5" >
    
                <div class="slide first">
                    <div class="grad"></div>
                    <img src="sliderImages/image-1.png" alt="" id="img1">
                </div>
                <div class="slide">
                    <div class="grad"></div>
                    <img src="sliderImages/image-2.jpg" alt="" id="img2">
                </div>
                <div class="slide">
                    <div class="grad"></div>
                    <img src="sliderImages/image-3.jpg" alt="" id="img3">
                </div>
                <div class="slide">
                    <div class="grad"></div>
                    <img src="sliderImages/image-4.jpg" alt="" id="img4">
                </div>
                <div class="slide">
                    <div class="grad"></div>
                    <img src="sliderImages/image-5.jpg" alt="" id="img5">
                </div>
    
                <div class="navigation-auto">
                    <div class="auto-btn1"></div>
                    <div class="auto-btn2"></div>
                    <div class="auto-btn3"></div>
                    <div class="auto-btn4"></div>
                    <div class="auto-btn5"></div>
                </div>
    
                <div class="navigation-manual">
                    <label for="radio1" class="manual-btn"></label>
                    <label for="radio2" class="manual-btn"></label>
                    <label for="radio3" class="manual-btn"></label>
                    <label for="radio4" class="manual-btn"></label>
                    <label for="radio5" class="manual-btn"></label>
                </div>
            </div>
        </div>
        <script>
            var counter = 1;
            setInterval(function(){
                document.getElementById('radio' + counter).checked = true;
                counter++;
                if(counter>5){
                    counter = 1;
                }
            },3000);
        </script>